<view class='container'>
  <view class="userinfo">
    <view class='my-portrait'>
      <image class="userinfo-avatar" src='{{userAvatar}}' background-size="cover" bindtap='clickUp'></image>
    </view>
    <view class='my-info'>
      <view class='my-info-1'>
        
      </view>
      <view class='my-info-2'>
        点击头像修改默认头像
      </view>
    </view>
  </view>
  <form bindsubmit="formSubmit">
    <view class="section">
      <view class="label">
        用户昵称</view>
      <view class="label-right">
        <input name="realname" class="input" type="text" value="{{userInfo.user_name}}" />
      </view>
    </view>
    <view class="section">
      <view class="label">
        手机号码</view>
      <view class="label-right">
        <input name="mobile" class="input" type="number" value="{{userInfo.mobile}}" />
      </view>
    </view>

    <button class='rz-submit main-bgcolor' formType="submit">提交</button>
  </form>
</view>