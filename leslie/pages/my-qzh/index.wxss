/* pages/qzh/index.wxss */

.show-popup {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 5;
}

.popup-contents {
  position: fixed;
  padding: 40rpx;
  width: 60%;
  /* background: url(https://www.lanrengj.com/static/images/leslie/tab_bg5.png) no-repeat center center; */
  background-color: #fff;
  border-radius: 10px;
  z-index: 6;
}

.row-wrap {
  display: flex;
}

.bt {
  justify-content: space-between;
}

.row-wrap .label-right {
  width: 70%;
}

.row-wrap .label {
  /* width: 30%; */
  float: left;
  line-height: 80rpx;
  height: 80rpx;
  margin: 0 25rpx 0 20rpx;
}

.row-wrap .time {
  color: #999;
  font-size: 28rpx;
  padding-right: 5rpx;
}

.row-wrap input {
  line-height: 70rpx;
  height: 70rpx;
  padding-left: 20rpx;
  border: 1px #0095e5 solid;
  border-radius: 5px;
}

textarea {
  box-sizing: border-box;
  overflow: scroll;
  border: 1px #0095e5 solid;
  border-radius: 5px;
  margin: 30rpx 0;
  padding: 20rpx;
  height: 300rpx;
  width: auto;
}

.save-btn {
  /* margin-top: 30rpx; */
  background-color: #0095e5;
  color: #fff;
  /* width: 80%; */
}

.top {
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  position: fixed;
  width: 100%;
  background-color: #fff;
  /* background: url(https://www.lanrengj.com/static/images/leslie/tab_bg5.png) no-repeat center center; */
}

.top_fabu {
  bottom: 0;
  display: flex;
  width: 100%;
  margin: 20rpx;
  align-items: center;
}

.top_fabu .label {
  width: 60%;
  color: #333;
  /* font-weight: bold; */
}

.top_fabu .label .l1 {
  margin-left: 10rpx;
}

.top_fabu .label .l2 {
  margin-left: 40rpx;
}

.top_fabu .label .l3 {
  margin-left: 70rpx;
}

.top_fabu .label-right {
  width: 40%;
}
