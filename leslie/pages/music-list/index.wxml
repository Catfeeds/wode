<!--pages/my-help/index.wxml-->
<import src="../../wxParse/wxParse.wxml" />
<view class='container'>

  <view class="tab_list control-content-list">
    <view bindtap="statusTap" class="status-label {{item.id == currentType ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{item.id}}" data-index="{{item.id}}" data-name="{{item.name}}">
      <view class="weui_cell">{{item.name}}</view>
      <view class='xueyuan' hidden="{{(item.id == currentType & !isclick)? false:true}}">
        <view class="" class="status-label {{item.id == listType ? 'active' : ''}}" wx:for-items="{{item.xiaofenlei}}" wx:key="{{item.id}}" data-index="{{item.id}}" data-name="{{item.name}}" bindtap="listTap">
          {{item.name}}
        </view>
      </view>
    </view>
  </view>
  <view class='top'>
  </view>
  <view class="no-bgxyList" hidden="{{(bgxyList.length > 0 || bgxyList2.length > 0) ? true : false}}">
    <view class="text">暂无文章</view>
  </view>

  <view class='droplist' >
    <block wx:for="{{bgxyList}}" wx:key="{{index}}">
      <view class='droplist-title' data-index="{{index}}" data-id="{{item.id}}" bindtap='clickTitle'>
        <view class='rotate {{bgxyList[index].isclick?"active":""}}'>
          <text class='iconfont icon-zhankai'></text>
        </view>
        <view class='img'>
          <image src='{{item.thumbnail}}' mode='aspectFit' wx:if="{{item.thumbnail}}"></image>
        </view>
        {{item.name}} {{item.description}}
      </view>
      <view class='droplist-content {{bgxyList[index].isclick?"active":""}}'>
        <block wx:for="{{item.aaa}}" wx:key="{{b}}">
          <view class='droplist-title' data-id="{{item.id}}" bindtap='clickPost'>
            {{item.post_title}} {{item.post_excerpt}}
          </view>
        </block>
      </view>
    </block>
  </view>
  <view class='droplist' >
    <block wx:for="{{bgxyList2}}" wx:key="{{index}}">
      <view class='droplist-title' data-index="{{index}}" data-id="{{item.id}}" bindtap='clickPost'>
        <view class='img'>
          <image src='{{item.thumbnail}}' mode='aspectFit' wx:if="{{item.thumbnail}}"></image>
        </view>
        {{item.post_title}} {{item.post_excerpt}}
      </view>
    </block>
  </view>
</view>