.tab_list {
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding: 0;
  display:flex;
}

.control-content-list {
  justify-content: inherit;
  color:#333;
  background: url(https://www.lanrengj.com/static/images/leslie/tab_bg3.png) no-repeat center center;
  box-shadow:0px 2px 2px 1px #ddd;
}

.control-content-list .status-label {
  display: flex;
  flex-direction: column;
  font-weight: bold;
  align-items: center;
  border-left: 1px solid #f0f0f0;
  /* border-bottom: 1px solid #f0f0f0; */
  width: 33%;
}

.weui_cell {
  position: relative;
  display: flex;
  padding: 15px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.nav {
  display: flex;
  border: 1px solid #eee;
  font-size: 32rpx;
  position: fixed;
  width: 100%;
  background-color: #fff;
}

.top {
  height: 20rpx;
}

.nav .status-label {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  width: 25%;
}

.active {
  color: #e50012;
  border-bottom: 3rpx solid #e50012;
}

.xueyuan {
  position: absolute;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  width: 186rpx;
  /* border: 1rpx solid #eee;
  border-top: 0px solid;  */
  background-color: #fff;
}

.xueyuan .status-label {
  border: 1rpx solid #eee;
  border-top: 0px solid #eee;
  line-height: 85rpx;
}

/*没有文章的显示  */

.no-bgxyList {
  text-align: center;
  font-size: 32rpx;
  padding: 80rpx 0;
}

.droplist {
  padding: 0 40rpx 40rpx 40rpx;
}

.droplist-title {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  /* font-weight: bold;
  margin-top: 20rpx;
  line-height: 60rpx; */
  min-height:70rpx;
  border-bottom: 1px solid #eee;
}


.droplist-title .goods-img {
  width: 120rpx;
  height: 120rpx;
  /* padding-left: 30rpx; */
  border: 1px solid #eee;
  margin: 20rpx 15rpx 20rpx 10rpx;
}

.img-box1-1 {
  display: flex;
  flex: 1;
  /* flex-direction: column; 
  justify-content: space-around;*/
  justify-content: space-between;
  align-items:center;
  text-align: left;
  margin-left: 15rpx;
}

.img-box1-guige {
  font-size: 24rpx;
  color: #797979;
}

.droplist-content {
  height: 0rpx;
  line-height: 55rpx;
  overflow: hidden;
  transition: height 1s;
  -moz-transition: height 1s; /* Firefox 4 */
  -webkit-transition: height 1s; /* Safari 和 Chrome */
  -o-transition: height 1s;
}

.droplist-content.active {
  height: auto;
  /* overflow: scroll; */
  transition: height 1s;
  -moz-transition: height 1s; /* Firefox 4 */
  -webkit-transition: height 1s; /* Safari 和 Chrome */
  -o-transition: height 1s;
}

.rotate {
  transform: rotate(-90deg);
  -ms-transform: rotate(-90deg); /* IE 9 */
  -moz-transform: rotate(-90deg); /* Firefox */
  -webkit-transform: rotate(-90deg); /* Safari 和 Chrome */
  -o-transform: rotate(-90deg);
  float: left;
  margin-right: 10rpx;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-zhankai {
  color: #f60;
  font-size: 40rpx;
}

.rotate.active {
  transform: rotate(0deg);
  -ms-transform: rotate(0deg); /* IE 9 */
  -moz-transform: rotate(0deg); /* Firefox */
  -webkit-transform: rotate(0deg); /* Safari 和 Chrome */
  -o-transform: rotate(0deg);
  transition: transform 0.5s;
  -moz-transition: transform 0.5s; /* Firefox 4 */
  -webkit-transition: transform 0.5s; /* Safari 和 Chrome */
  -o-transition: width 0.5s;
}
