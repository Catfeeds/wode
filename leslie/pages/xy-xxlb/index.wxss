.container {
  /* height: 100%; */
  color: #333;
}

page {
  /* background-color: #f0f0f0; */
  width: 100%;
  height: 100%;
}

.top-img {
  background: url("https://www.lanrengj.com/static/images/weappshop/fbxx_b.png") no-repeat;
  background-size: 100% 100%;
  padding: 80rpx 50rpx 140rpx 50rpx;
  font-size: 50rpx;
  color: #fff;
  text-align: center;
  font-family: "黑体";
  line-height: 80rpx;
}

.goods-time {
  color: #ff7701;
}

.top-img .top-img-renshu {
  font-size: 40rpx;
}

.top {
  display: flex;
  justify-content: space-around;
  position: relative;
  height: 60rpx;
  background-color: #fff;
}

.top .top_fabu, .top_dingdan {
  /* border: 1px solid #eee; */
  width: 45%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  box-shadow: 0px 3px 5px 1px #aaa;
  position: absolute;
  top: -60rpx;
  background-color: #fff;
  border-radius: 90px;
}

.top .top_fabu image, .top .top_dingdan image {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  position: relative;
  left: -10rpx;
}

.no-order {
  width: 100%;
  text-align: center;
  background-color: #fff;
  padding-top: 80rpx;
}

.no-order-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 30rpx;
  color: #999;
  /* text-align: center */
}

/*闲置物品信息列表*/

.esxxlist {
  display: flex;
  padding: 20rpx 40rpx;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  /* background-color: #fff; */
}

.esxxlist .img {
  width: 220rpx;
  height: 240rpx;
  border: 1px solid #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.esxxlist .img image {
  width: 100%;
  height: 100%;
}

.esxxlist-content {
  flex: 1;
  line-height: 45rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 10px;
}

.name {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
}

.name image {
  width: 50rpx;
  height: 40rpx;
}

.name .name-shiming {
  display: flex;
  align-items: center;
}

.score {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #f90;
  font-size: 24rpx;
  border: 1px solid #f0f0f0;
  border-radius: 4px;
  padding: 1px 2px;
  padding-left: 0px;
}

.fanwei {
  color: #0095e5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.jiedan {
  color: #999;
  display: flex;
  justify-content: flex-end;
}

.btn {
  background-color: #0095e5;
  color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.zan {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.active {
  color: #eb7350;
}
