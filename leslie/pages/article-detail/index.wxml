<view class='body'>

  <text class='h1'>{{bgxywz.post_title}}</text>
  <rich-text type="node" nodes="" class='content'>
    <template is="wxParse" data="{{wxParseData:article.nodes}}" />
  </rich-text>
</view>

<view class="footer-box">
  <button wx:if="{{bgxywz.post_content}}" class="contact4" open-type="share">
分享 
  </button>
  <view class="contact2" bindtap="toHomePage">
回首页
  </view>
  <view class="contact">
    <contact-button style="opacity:0;position:absolute;" type="default-dark" session-from="shop" size="27">联系客服</contact-button>
    联系客服
  </view>
</view>
<view class="footer-box3" wx:if="{{bgxywz.id!=490}}">
