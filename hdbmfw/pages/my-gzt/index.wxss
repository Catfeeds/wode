.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
  display: flex;
}

.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  background: #e85654;
  width: 750rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #fff;
}

.version {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  padding: 40rpx;
}

.my-item {
  width: 100%;
  background: url(https://www.lanrengj.com/static/images/weappshop/arrow-right.png) no-repeat 750rpx center;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  height: 100rpx;
  line-height: 100rpx;
}

.about {
  width: 100%;
  background: url(https://www.lanrengj.com/static/images/weappshop/arrow-right.png) no-repeat 750rpx center;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 100rpx;
}

.data-num {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.weui_cell {
  display: flex;
  flex-direction: column;
  width: 33%;
  text-align: center;
  height: 150rpx;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.weui_cell_hd image {
  width: 100%;
  height: 100%;
  vertical-align: -2px;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 28rpx;
  color: #333;
}

.my-btn {
  width: 80%;
}