.container {
  background-color: #f2f2f2;
}

.address-list {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.address-list .a-address {
  width: 720rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.a-address .left-text {
  width: 610rpx;
  box-sizing: border-box;
  padding-left: 58rpx;
}

.a-address .left-text.active {
  background: url(https://www.lanrengj.com/static/images/weappshop/addr-active.png) no-repeat left center;
  background-size: 28rpx auto;
}

.a-address .left-text .name-tel {
  margin-bottom: 20rpx;
}

.a-address .left-text .address-box {
  font-size: 24rpx;
  color: #888;
  line-height: 36rpx;
}

.a-address .right-edit {
  width: 109rpx;
  height: 100%;
  padding: 50rpx 0 50rpx 58rpx;
  box-sizing: border-box;
  background: url(https://www.lanrengj.com/static/images/weappshop/addr-edit.png) no-repeat 43rpx center;
  background-size: 35rpx auto;
}

.bottom-box {
  position: fixed;
  width: 100%;
  bottom: 0;
  font-size: 28rpx;
  color: #000;
  border-top: 1rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  background: url(https://www.lanrengj.com/static/images/weappshop/arrow-right.png) no-repeat 705rpx center;
  background-size: 15rpx auto;
}

.bottom-box .add-btn {
  margin-left: 30rpx;
  padding-left: 70rpx;
  background: url(https://www.lanrengj.com/static/images/weappshop/add-addr.png) no-repeat left center;
  background-size: 40rpx auto;
}

.address-btn {
  position: fixed;
  width: 100%;
  bottom: 10rpx;
  display: flex;
  justify-content: space-around;
}

.address-btn button {
  width: 40%;
  background-color: #fff;
  border-radius: 0px;
}

.address-btn {
  margin-top: 30rpx;
}

.addbtn {
  color: #14c092 ;
  border: 1px solid #14c092 ;
  padding: 20rpx 60rpx;
}

.wxbtn {
  color: #6bd265;
  border: 1px solid #6bd265;
  box-shadow: inherit;
  border-radius: 0;
  padding: 20rpx 60rpx;
}

.wxbtn .iconfont {
  font-size: 35rpx;
  margin-right: 5rpx;
}
